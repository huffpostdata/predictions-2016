var meta=data.model.metadata

header.forecast
  h2 - Forecast

  if(meta.slug == 'senate')
    a.president href="${data.path_to('president')}" - President
    h1.senate - Senate
  else
    h1.president - President
    a.senate href="${data.path_to('senate')}" - Senate

  p.byline - $!{meta.author_html}
  <p class="date date-published">Published <time>${meta.date_published}</time></p>
  if(meta.date_updated)
    <p class="date date-updated">Updated <time>${meta.date_updated}</time></p>

